{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "declarationDir": "./types",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "src/**/*.test.ts"
  ]
}